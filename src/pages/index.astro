---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.tsx';
---

<Layout title="Owl Cyber Club">
	<main class="min-h-screen flex flex-col items-center justify-center relative overflow-hidden bg-cyber-black">
		<div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] z-0"></div>
		
		<Hero client:load />
	</main>
</Layout>